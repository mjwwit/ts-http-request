{
  "compilerOptions": {
    "strict": true,
    "strictBindCallApply": false,
    "removeComments": false,
    "newLine": "LF",
    "pretty": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2016",
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
